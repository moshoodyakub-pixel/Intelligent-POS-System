# Copy this file to .env for local development and fill real values.
# DO NOT COMMIT your .env file with real secrets.

SECRET_KEY=replace-with-a-long-random-string
DATABASE_URL=postgresql://user:password@hostname:5432/dbname
REDIS_URL=redis://:password@hostname:6379/0
ENV=development
DEBUG=true

# Monitoring & Observability
# Backend Sentry DSN (Python/FastAPI)
SENTRY_DSN=
# Frontend Sentry DSN (React) - use REACT_APP_ prefix for Create React App
REACT_APP_SENTRY_DSN=
# Environment identifier for Sentry
REACT_APP_ENVIRONMENT=development
# Application version for Sentry releases
REACT_APP_VERSION=1.0.0
# Sentry trace sample rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=1.0
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=1.0
# Enable Prometheus metrics endpoint
METRICS_ENABLED=true
